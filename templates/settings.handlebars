<form role="form" id="settings_form" class="form-horizontal">
  <div class="form-group" id="settings_name_group">
    <label class="col-sm-2 control-label" for="settings_name">Name</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="settings_name" placeholder="Name" value="{{name}}">
    </div>
  </div>
  <div class="form-group" id="settings_login_credentials_group">
    <label class="col-sm-2 control-label" for="settings_login_credentials">Login credentials</label>
    <div class="col-sm-8">
      <p class="form-control-static"><a href="#identifiers" id="settings_login_credentials">{{login_credentials}} {{#if login_credentials_multiple}}email addresses{{else}}email address{{/if}}</a></p>
    </div>
  </div>
  <div class="form-group" id="settings_default_currency_group">
    <label class="col-sm-2 control-label" for="settings_default_currency">Default currency</label>
    <div class="col-sm-8">
      <input type="text" class="form-control typeahead" id="settings_default_currency" placeholder="Default currency" value="{{default_currency}}">
    </div>
  </div>
  <div class="form-group" id="settings_iban_group">
    <label class="col-sm-2 control-label" for="settings_iban">IBAN</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="settings_iban" placeholder="International bank account number" value="{{iban}}">
    </div>
  </div>
  <div class="form-group" id="settings_contacts_group">
    <label class="col-sm-2 control-label" for="settings_contacts">Contacts</label>
    <div class="col-sm-8">
      <p class="form-control-static"><a href="#connections" id="settings_contacts">{{contacts_count}} {{#if contacts_count_multiple}}contacts{{else}}contact{{/if}}</a></p>
    </div>
  </div>
</form>
