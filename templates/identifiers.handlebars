{{#if identifiers}}
  <ul class="list-group">
    {{#each identifiers}}
      <li class="list-group-item">
        <div class="row">
          <div class="col-xs-12">
            {{identifier}}
            <p class="transactions_buttons">
              <a href="javascript:identifier_change_pwd(''{{identifier}}'');" class="btn btn-default" role="button">Change password</a>
              {{#unless verified}}
                <a href="javascript:identifier_verify('{{identifier}}');" class="btn btn-primary" role="button">Enter verification code</a>
                <a href="javascript:identifier_resend_verification_code('{{identifier}}');" class="btn btn-default" role="button">Resend verification code</a>
              {{/unless}}
              <a href="javascript:identifier_remove('{{identifier}}');" class="btn btn-danger" role="button">Delete</a>
            </p>
          </div>
        </div>
      </li>
    {{/each}}
  </ul>
{{/if}}

<a href="javascript:identifier_add();" class="btn btn-default">Add a new identifier</button>
